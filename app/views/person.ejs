<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Formulário de Cadastro</title>
</head>
<body>
    <form  method="post" id="cadastroForm">
        <label for="name">Nome:</label>
        <input type="text" id="name" name="name" required><br><br>

        <label for="birthDate">Data de Nascimento:</label>
        <input type="date" id="birthDate" name="birthDate" required><br><br>

        <label for="cpf">CPF:</label>
        <input type="text" id="cpf" name="cpf" pattern="\d{3}\.\d{3}\.\d{3}-\d{2}" required>
        <small>Formato: 000.000.000-00</small><br><br>

        <input type="submit" value="Cadastrar">
    </form>

    <script>
        const form = document.querySelector("#cadastroForm");
        var formEl = document.forms.cadastroForm;

        form.addEventListener("submit", async (event) => {
            event.preventDefault();

            const formData = new FormData(form);

            const response = await fetch("/person", {
                method: "POST",
                body: { name: formData.get("name"), birthDate: formData.get("birthDate"), cpf: formData.get("cpf") },
            });
        });
    </script>
</body>
</html>
